body
  background-color: black
  font-family: 'Open Sans'
  color: white
  overflow-x: hidden
  cursor: none

.background
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%

vendors = webkit

@keyframes starfield1 {
   from {
     background-position: -10px -50px;
   }
   to {
     background-position:  10px -50px;
   }
}

@keyframes starfield2 {
   from {
     background-position:  15px 125px;
   }
   to {
     background-position: -15px 125px;
   }
}

#starfield1
  -webkit-animation-name: starfield1
  -webkit-animation-duration: 15s
  -webkit-animation-iteration-count: infinite
  -webkit-animation-direction: alternate
  -webkit-animation-timing-function: ease-in-out

#starfield2
  -webkit-animation-name: starfield2
  -webkit-animation-duration: 15s
  -webkit-animation-iteration-count: infinite
  -webkit-animation-direction: alternate
  -webkit-animation-timing-function: ease-in-out

.background.back.blue
  background: transparent url('/images/bg/neb.blue.jpg') no-repeat scroll 0 -1px

.background.back.red
  background: transparent url('/images/bg/neb.red.jpg') no-repeat scroll 0 -1px

.background.middle
  background: transparent url('/images/bg/stars.png') repeat scroll -50px -50px

.background.front
  background: transparent url('/images/bg/stars.png') repeat scroll -75px 125px

